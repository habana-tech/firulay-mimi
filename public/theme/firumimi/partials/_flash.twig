<aside class="alerts-wrap">
  {% for bag in ['success', 'info', 'warning', 'danger'] %}
  {% for message in app.flashes(bag) %}
    <div class="alert alert-{{bag}} alert-dismissible fade show" role="alert">
  {{ message }}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
  {% endfor %}
{% endfor %}
</aside>

