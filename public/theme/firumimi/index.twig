{% extends 'partials/_master.twig' %}

{% block styles %}
    {{ parent() }}
    {{ encore_entry_link_tags('home', null, 'firulay') }}
{% endblock %}
{% block main %}

    {% if record|default %}

        {{ include('partials/index/_pets_grid.twig') }}
        <h1><a href="{{ record|link }}">{{ record|title }}</a></h1>


        {{ record|excerpt }}

        {% include 'partials/_image.twig' with ({'image': record|image}) %}

        {{ record.content }}

        {{ include('partials/_recordfooter.twig', { 'record': record }) }}

    {% endif %}

{% endblock main %}
